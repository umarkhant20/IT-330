@model List<Proj3_Khan.Models.RegisteredUser>

<!--it will display a filter option to filter data-->
<form method="get" asp-action="Registrations" asp-controller="Home">
    <input type="text" id="filter" name="filter" />
    <input type="submit" value="Filter" class="btn btn-success" />
</form>
<br>

<!--it will display the entered in the database-->
@if (Model != null && Model.Count > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Username</th>
                <th>Password</th>
                <th>Degree Program</th>
                <th>Age</th>
                <th>Status</th>
                <th>Email subscription</th>
                <th>Registration Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reg in Model)
            {
            <tr>
                <td>@reg.Id</td>
                <td>@reg.Name</td>
                <td>@reg.Address</td>
                <td>@reg.City </td>
                <td>@reg.State</td>
                <td>@reg.Zip</td>
                <th>@reg.Username</th>
                <th>@reg.Password</th>
                <th>@reg.DegreeProgram</th>
                <th>@reg.Age</th>
                <th>@reg.FirstTime</th>
                <th>@reg.Notification</th> 
                <th>@reg.RegistrationDate</th>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4> No Registrations to display.</h4>
}
